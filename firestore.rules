
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /items/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }
    
    // Allow users to read/write messages for an item if they are the item owner or involved in the conversation.
    // For simplicity in this case, we'll allow any signed in user to message on an item, except the owner messaging themselves.
    match /items/{itemId}/messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
        // In a real app, you might want more complex rules, e.g., only item owner and one other party can message.
    }
  }
}
