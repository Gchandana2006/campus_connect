
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isItemOwner(itemId) {
      return isSignedIn() && get(/databases/$(database)/documents/items/$(itemId)).data.userId == request.auth.uid;
    }

    match /items/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }
    
    // A user can read messages if they own the item OR have sent a message.
    // This allows both parties in a conversation to see it.
    match /items/{itemId}/messages/{messageId} {
        // Anyone signed in can list messages, but content is protected by 'get'.
        allow list: if isSignedIn();
        
        // To read a specific message, you must be the item owner or the sender of that message.
        allow get: if isItemOwner(itemId) || (isSignedIn() && resource.data.senderId == request.auth.uid);
        
        // Anyone signed in can send a message.
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
    }
  }
}
