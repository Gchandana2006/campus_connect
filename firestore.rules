
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getItemOwnerId(itemId) {
        return get(/databases/$(database)/documents/items/$(itemId)).data.userId;
    }
    
    match /items/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }
    
    match /items/{itemId}/messages/{messageId} {
        // This function is difficult to implement securely and efficiently in rules alone.
        // It's better to manage participants on the client or with a Cloud Function.
        // For this ruleset, we will rely on checking the participants list on the parent item.
        function getMessageParticipants() {
            return get(/databases/$(database)/documents/items/$(itemId)).data.participants;
        }

        // READ: Allow if the user is one of the two participants stored on the item document.
        allow list, get: if isSignedIn() && request.auth.uid in getMessageParticipants();

        // CREATE: Allow a new message if...
        allow create: if isSignedIn() && 
                         request.resource.data.senderId == request.auth.uid &&
                         (
                            // Scenario A: No participants yet (first message).
                            // The client will need to add both users to the 'participants' array on the item.
                            // This rule is optimistic. A Cloud Function would be more robust.
                            !exists(/databases/$(database)/documents/items/$(itemId)/messages) ||
                            
                            // Scenario B: Participants exist, so the sender must be one of them.
                            request.auth.uid in getMessageParticipants()
                         );
    }
  }
}
