
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isItemOwner(itemId) {
      return isSignedIn() && get(/databases/$(database)/documents/items/$(itemId)).data.userId == request.auth.uid;
    }
    
    match /items/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow owner to update the item, but only certain fields.
      // For simplicity, we'll let them update the status.
      // A more robust rule would check specific fields: `request.resource.data.keys().hasOnly(['status'])`
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }
    
    // Only the item owner and message sender should be able to see messages.
    // For now, let's restrict read access to the item owner for simplicity.
    // A more complex implementation could allow any participant to read.
    match /items/{itemId}/messages/{messageId} {
        allow read: if isItemOwner(itemId);
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
        // In a real app, you might want more complex rules, e.g., only item owner and one other party can message.
    }
  }
}
